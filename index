<script>
function toggleTranslation() {
// Mendapatkan elemen teks
const textsId = [document.getElementById('text1-id'), document.getElementById('text2-id'), document.getElementById('text3-id')];
const textsEn = [document.getElementById('text1-en'), document.getElementById('text2-en'), document.getElementById('text3-en')];

// Mengubah tampilan teks
for (let i = 0; i < textsId.length; i++) {
    if (textsId[i].style.display === "none") {
        textsId[i].style.display = "block"; // Tampilkan teks dalam bahasa Indonesia
        textsEn[i].style.display = "none"; // Sembunyikan teks dalam bahasa Inggris
    } else {
        textsId[i].style.display = "none"; // Sembunyikan teks dalam bahasa Indonesia
        textsEn[i].style.display = "block"; // Tampilkan teks dalam bahasa Inggris
    }
}

// Mengubah teks header
const headerText = document.getElementById('header-text');
if (headerText.innerText === "Selamat datang di sejarah benteng orange") {
    headerText.innerText = "Welcome to the history of the Orange Fort"; // Teks dalam bahasa Inggris
} else {
    headerText.innerText = "Selamat datang di sejarah benteng orange"; // Teks dalam bahasa Indonesia
}
}
</script>
